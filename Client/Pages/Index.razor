@layout PublicLayout
@page "/"
<PageTitle>WhatsApp Farm</PageTitle>

<div class="rz-border-radius-4" style="min-height: 80vh; display: flex; align-items: center; background: linear-gradient(135deg, #25D366 0%, #128C7E 50%, #075E54 100%); margin: -1rem; padding: 4rem 2rem;">
    <RadzenRow Gap="2rem" Style="max-width: 1200px; margin: 0 auto; width: 100%;">
        <RadzenColumn Size="12" SizeMD="6" Style="display: flex; flex-direction: column; justify-content: center;">
            <RadzenText Text="WhatsApp Farm" TextStyle="Radzen.Blazor.TextStyle.DisplayH1" TagName="Radzen.Blazor.TagName.H1" Style="color: white; font-size: 3.5rem; font-weight: 700; margin-bottom: 1rem;"></RadzenText>
            <RadzenText Text="Manage Your WhatsApp Communications at Scale" TextStyle="Radzen.Blazor.TextStyle.H4" TagName="Radzen.Blazor.TagName.H2" Style="color: rgba(255,255,255,0.9); font-weight: 400; margin-bottom: 1.5rem;"></RadzenText>
            <RadzenText Text="Streamline your messaging workflow with powerful automation tools, analytics, and multi-account management â€” all in one place." TextStyle="Radzen.Blazor.TextStyle.Body1" TagName="Radzen.Blazor.TagName.P" Style="color: rgba(255,255,255,0.85); font-size: 1.25rem; line-height: 1.8; margin-bottom: 2rem;"></RadzenText>
            <RadzenStack Orientation="Radzen.Orientation.Horizontal" Gap="1rem" Wrap="Radzen.FlexWrap.Wrap">
                <RadzenButton Text="Get Started" Icon="arrow_forward" ButtonStyle="Radzen.ButtonStyle.Primary" Size="Radzen.ButtonSize.Large"></RadzenButton>
                <RadzenButton Text="Learn More" Icon="info" ButtonStyle="Radzen.ButtonStyle.Light" Size="Radzen.ButtonSize.Large" Variant="Radzen.Variant.Outlined"></RadzenButton>
            </RadzenStack>
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6" Style="display: flex; align-items: center; justify-content: center;">
            <RadzenCard Style="background: rgba(255,255,255,0.15); backdrop-filter: blur(10px); border: 1px solid rgba(255,255,255,0.2); padding: 2rem; border-radius: 1rem;">
                <RadzenStack Gap="1.5rem">
                    <RadzenStack Orientation="Radzen.Orientation.Horizontal" Gap="1rem" AlignItems="Radzen.AlignItems.Center">
                        <RadzenIcon Icon="chat" Style="font-size: 2.5rem; color: white;"></RadzenIcon>
                        <div>
                            <RadzenText Text="Multi-Account Support" TextStyle="Radzen.Blazor.TextStyle.H6" Style="color: white; margin: 0;"></RadzenText>
                            <RadzenText Text="Manage multiple WhatsApp accounts effortlessly" TextStyle="Radzen.Blazor.TextStyle.Body2" Style="color: rgba(255,255,255,0.8); margin: 0;"></RadzenText>
                        </div>
                    </RadzenStack>
                    <RadzenStack Orientation="Radzen.Orientation.Horizontal" Gap="1rem" AlignItems="Radzen.AlignItems.Center">
                        <RadzenIcon Icon="schedule" Style="font-size: 2.5rem; color: white;"></RadzenIcon>
                        <div>
                            <RadzenText Text="Automated Messaging" TextStyle="Radzen.Blazor.TextStyle.H6" Style="color: white; margin: 0;"></RadzenText>
                            <RadzenText Text="Schedule and automate your communications" TextStyle="Radzen.Blazor.TextStyle.Body2" Style="color: rgba(255,255,255,0.8); margin: 0;"></RadzenText>
                        </div>
                    </RadzenStack>
                    <RadzenStack Orientation="Radzen.Orientation.Horizontal" Gap="1rem" AlignItems="Radzen.AlignItems.Center">
                        <RadzenIcon Icon="analytics" Style="font-size: 2.5rem; color: white;"></RadzenIcon>
                        <div>
                            <RadzenText Text="Detailed Analytics" TextStyle="Radzen.Blazor.TextStyle.H6" Style="color: white; margin: 0;"></RadzenText>
                            <RadzenText Text="Track performance with real-time insights" TextStyle="Radzen.Blazor.TextStyle.Body2" Style="color: rgba(255,255,255,0.8); margin: 0;"></RadzenText>
                        </div>
                    </RadzenStack>
                </RadzenStack>
            </RadzenCard>
        </RadzenColumn>
    </RadzenRow>
</div>

